nextflow_process {

    name "Test module motus"
    script "modules/motus.nf"
    process "MOTUS"

    test("motus") {

        when {
            params {
                reads = "${baseDir}/tests/modules/fixtures/motus/db_mOTU/db_mOTU_test/test1_single.fastq.gz"
                db = "${baseDir}/tests/modules/fixtures/motus/db_mOTU/"
            }
            process {
                """
                input[0] = channel.value('test')
                input[1] = channel.fromPath("${params.reads}", checkIfExists: true)
                input[2] = channel.fromPath("${params.db}")
                """
            }
        }

        then {
            assert process.success
        }
    }
}