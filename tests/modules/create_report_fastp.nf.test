nextflow_process {

    name "Test module Fastp report"
    script "modules/create_report_fastp.nf"
    process "FASTP_REPORT"

    test("Report QC (SE)") {

        when {
            params {
                jsons = "${baseDir}/tests/modules/fixtures/fastp_reports/"
                mode = "single"
            }
            process {
                """
                input[0] = channel.fromFilePairs("${params.jsons}/mgtest_fastp.qc.json", checkIfExists: true).map { it[1] }
                input[1] = params.mode
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }
    test("Report QC and overlap (PE)") {

        when {
            params {
                jsons = "${baseDir}/tests/modules/fixtures/fastp_reports/"
                mode = "paired"
            }
            process {
                """
                input[0] = channel.fromPath("${params.jsons}/*.json").collect()
                input[1] = params.mode
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }
}
