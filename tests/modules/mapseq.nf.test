nextflow_process {

    name "Test module mapseq"
    script "modules/mapseq.nf"
    process "MAPSEQ"

    test("mapseq") {

        when {
            params {
                seq = "${baseDir}/tests/modules/fixtures/mapseq/test.SSU.fasta"
                db = "${baseDir}/tests/modules/fixtures/mapseq/silva-SSU/silva-SSU.fasta"
                db_cl = "${baseDir}/tests/modules/fixtures/mapseq/silva-SSU/silva-SSU.fasta.mscluster"
                tax = "${baseDir}/tests/modules/fixtures/mapseq/silva-filt.txt"
            }
            process {
                """
                input[0] = channel.fromPath("${params.seq}", checkIfExists: true)
                input[1] = channel.fromPath("${params.db}", checkIfExists: true)
                input[2] = channel.fromPath("${params.db_cl}", checkIfExists: true)
                input[3] = channel.fromPath("${params.tax}", checkIfExists: true)
                input[4] = channel.value("LSU")
                """
            }
        }

        then {
            assert process.success
            // can not ise snapshot as mapseq annotates one sequence in different way?
            assert path(process.out.mapseq_result.get(0)).size() == 11163
        }
    }
}