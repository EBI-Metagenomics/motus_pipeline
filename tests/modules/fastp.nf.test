nextflow_process {

    name "Test Process FASTP"
    script "modules/fastp.nf"
    process "FASTP"

    test("Fastp QC on PE") {

        when {
            params {
                name = "oral_human_example_1_splitaa"
                reads = "/Users/kates/Desktop/quality/clean_other/"
                mode = "paired"
            }
            process {
                """
                input[0] = params.name
                input[1] = channel.fromPath("${params.reads}/${params.name}*.fastq.gz", checkIfExists: true)
                input[2] = params.mode
                input[3] = ""
                input[4] = 10
                input[5] = 10
                input[6] = 15
                input[7] = 10
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }
}
